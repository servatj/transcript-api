# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Transcript API

# Security (Required)
API_KEY_NAME=X-API-Key
API_KEY=your_api_key_here  # Required - Change this!

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Optional - Leave empty for no password

# Rate Limiting (requests per hour)
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_REQUESTS_YOUTUBE=100
RATE_LIMIT_MAX_REQUESTS_TIKTOK=50
RATE_LIMIT_MAX_REQUESTS_REELS=30

# OpenAI (Optional - for Whisper fallback)
OPENAI_API_KEY=  # Optional - Required only if you want to use Whisper fallback

# Provider-specific settings (Optional)
TIKTOK_SESSION_ID=  # Optional - Required for TikTok private videos
INSTAGRAM_USERNAME=  # Optional - Required for Instagram private videos
INSTAGRAM_PASSWORD=  # Optional - Required for Instagram private videos 